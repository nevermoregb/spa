    <logger name="jdbc.audit" level="WARN" />

    <logger name="jdbc.sqlonly" level="WARN" />

    <logger name="jdbc.connection" level="warn" />

    <!-- Root Logger -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT_OUT" />
        <appender-ref ref="root" />
        <appender-ref ref="errorLog" />
    </root>
</configuration>
